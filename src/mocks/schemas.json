[
  {
    "id": "schema-1",
    "name": "Bike Station Standard",
    "description": "Standard structure for city bike stations availability and capacity.",
    "version": "1.0.0",
    "concepts": [
      {
        "name": "Station",
        "description": "Physical location where bikes can be rented",
        "properties": [
          {
            "name": "station_id",
            "type": "String",
            "isMandatory": true,
            "unit": null
          },
          {
            "name": "capacity",
            "type": "Integer",
            "isMandatory": true,
            "unit": "slots"
          },
          {
            "name": "bikes_available",
            "type": "Integer",
            "isMandatory": true,
            "unit": "bikes"
          },
          {
            "name": "is_active",
            "type": "Boolean",
            "isMandatory": true,
            "unit": null
          }
        ]
      },
      {
        "name": "Location",
        "description": "Geographical coordinates",
        "properties": [
          {
            "name": "latitude",
            "type": "Float",
            "isMandatory": true,
            "unit": "deg"
          },
          {
            "name": "longitude",
            "type": "Float",
            "isMandatory": true,
            "unit": "deg"
          }
        ]
      }
    ]
  },
  {
    "id": "schema-2",
    "name": "Air Quality Measurement",
    "description": "Schema for particulate matter sensors (PM2.5, PM10).",
    "version": "2.1.0",
    "concepts": [
      {
        "name": "SensorReading",
        "description": "Single measurement event",
        "properties": [
          {
            "name": "timestamp",
            "type": "DateTime",
            "isMandatory": true,
            "unit": null
          },
          {
            "name": "pm2_5",
            "type": "Float",
            "isMandatory": true,
            "unit": "µg/m³"
          },
          {
            "name": "pm10",
            "type": "Float",
            "isMandatory": false,
            "unit": "µg/m³"
          },
          {
            "name": "temperature",
            "type": "Float",
            "isMandatory": false,
            "unit": "Celsius"
          }
        ]
      }
    ]
  },
  {
    "id": "schema-3",
    "name": "Public Transport Stop",
    "description": "General schema for bus and tram stops.",
    "version": "1.0.0",
    "concepts": [
      {
        "name": "StopInfo",
        "properties": [
          {
            "name": "stop_code",
            "type": "String",
            "isMandatory": true
          },
          {
            "name": "stop_name",
            "type": "String",
            "isMandatory": true
          },
          {
            "name": "zone",
            "type": "String",
            "isMandatory": false
          },
          {
            "name": "has_ticket_machine",
            "type": "Boolean",
            "isMandatory": false
          }
        ]
      }
    ]
  }
]